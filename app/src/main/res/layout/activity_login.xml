<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_anim"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="40dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/splash">

    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_anim"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/yeonsung_regular"
        android:text="RAPID FOOD"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/intro_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_text"
        android:layout_marginStart="120dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/yeonsung_regular"
        android:text="Your Order, We Deliver !!"
        android:textSize="16sp">

    </TextView>

    <TextView
        android:id="@+id/login_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_login"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="Login To Your Account"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/Email_login"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_below="@id/login_acc"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="15dp"
        android:hint="Enter Email"
        android:padding="15dp">

    </EditText>

    <EditText
        android:id="@+id/Pass_login"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_below="@id/Email_login"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="15dp"
        android:hint="Enter Password"
        android:padding="15dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/or"
        android:layout_below="@id/Pass_login"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:text="or Continue With">

    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_below="@+id/or"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/google"
        android:background="@drawable/whitebutton"
        android:text="Google"
        android:drawablePadding="5dp"
        android:padding="15dp">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:id="@+id/btn2"
        android:layout_below="@+id/or"
        android:layout_marginStart="220dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/facebook"
        android:background="@drawable/whitebutton"
        android:text="Facebook"
        android:drawablePadding="5dp"
        android:padding="15dp">

    </androidx.appcompat.widget.AppCompatButton>

   <Button
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn1"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:text="LOGIN">

   </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't Have Account?"
        android:layout_below="@id/btn3"
        android:layout_marginStart="140dp"
        android:layout_marginTop="15dp">

    </TextView>

</RelativeLayout>