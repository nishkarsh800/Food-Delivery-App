<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_anim"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/splash">

    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_anim"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/yeonsung_regular"
        android:text="RAPID FOOD"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/intro_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_text"
        android:layout_marginStart="120dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/yeonsung_regular"
        android:text="You Order, We Deliver !!"
        android:textSize="16sp">

    </TextView>

    <TextView
        android:id="@+id/login_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_login"
        android:layout_marginStart="135dp"
        android:layout_marginTop="20dp"
        android:text="Sign Up Here"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/name_Signup"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_below="@id/login_acc"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/user_plus"
        android:drawablePadding="15dp"
        android:hint="Enter Name"
        android:padding="15dp"
        android:background="@drawable/edittextshape"
        android:elevation="5dp">

    </EditText>

    <EditText
        android:id="@+id/Email_login"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_below="@id/name_Signup"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="15dp"
        android:hint="Enter Email"
        android:padding="15dp"
        android:background="@drawable/edittextshape"
        android:elevation="5dp">

    </EditText>

    <EditText
        android:id="@+id/Pass_login"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_below="@id/Email_login"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="15dp"
        android:hint="Enter Password"
        android:padding="15dp"
        android:background="@drawable/edittextshape"
        android:elevation="5dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/or"
        android:layout_below="@id/Pass_login"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:text="or Sign Up With">

    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_below="@+id/or"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/google"
        android:background="@drawable/whitebutton"
        android:text="Google"
        android:drawablePadding="5dp"
        android:padding="15dp"
        android:elevation="5dp">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:id="@+id/btn5"
        android:layout_below="@+id/or"
        android:layout_marginStart="220dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/facebook"
        android:background="@drawable/whitebutton"
        android:text="Facebook"
        android:drawablePadding="5dp"
        android:padding="15dp"
        android:elevation="5dp">

    </androidx.appcompat.widget.AppCompatButton>

    <Button
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:id="@+id/btn6"
        android:layout_below="@+id/btn4"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:text="Create Account"
        android:elevation="5dp">

    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alreadyhavebutton"
        android:text="Already Have An Account?"
        android:layout_below="@id/btn6"
        android:layout_marginStart="125dp"
        android:layout_marginTop="10dp">

    </TextView>


</RelativeLayout>